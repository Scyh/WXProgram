.container {
  background: rgb(244, 244, 244);
  font-family: 'Helvetica Neue';
}

/* 隐藏滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.text-sm {
    font-size: 24rpx;
    color: #999;
}
.text-normal {
    font-size: 26rpx;
    color: #333;
}
.text-danger {
    color: #FF0036;
}

.pull-right {
    float: right!important;
}
.pull-left {
    float: left!important;
}