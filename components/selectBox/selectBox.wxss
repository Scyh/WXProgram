.show {
    display: block;
}
.hide {
    display: none;
}
.select-box {
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: 99;
    padding: 20rpx 30rpx;
    background: #fff;
}
.box-header {
    display: flex;
    display: -webkit-flex;
    margin-bottom: 10rpx;
    font-size: 26rpx;
}

.img-wrap {

}
.img {
    width: 200rpx;
    height: 200rpx;
}

.box-body {
    font-size: 26rpx;
}
.title {
    padding: 10rpx 0;
}
.cate-item {
    display: inline-block;
    margin: 0 16rpx 16rpx 0; 
    padding: 6rpx 22rpx;
    border-radius: 16rpx;
    border: 1px solid #f5f5f5;
    color: #555;
    background-color: #f5f5f5;
}
.cate-item.disabled {
    color: #cfcfcf;
}
.cate-item.selected {
    border-color: #FF0036;
    color: #FF0036;
    background-color: #FFF5F7;
}